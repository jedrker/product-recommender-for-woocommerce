{
  "name": "medical-recommender-frontend",
  "version": "1.0.0",
  "description": "Frontend for Medical Product Recommender system",
  "type": "module",
  "main": "dist/index.html",
  "scripts": {
    "dev": "vite",
    "build": "pnpm run lint:check && pnpm run type-check && vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 8080",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf dist/",
    "build:prod": "pnpm run clean && pnpm run lint:check && pnpm run format:check && pnpm run type-check && vite build",
    "deploy": "pnpm run build:prod && vercel --prod",
    "prepare": "pnpm run format && pnpm run lint"
  },
  "keywords": [
    "medical",
    "recommender",
    "woocommerce",
    "typescript",
    "vite",
    "vercel",
    "healthcare"
  ],
  "author": "Medical Recommender Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.1.0",
    "prettier": "^3.1.0",
    "terser": "^5.43.1",
    "typescript": "^5.3.0",
    "vercel": "^32.0.0",
    "vite": "^5.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@8.15.0"
}
